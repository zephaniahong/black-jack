<%-include('partials/header')%>
<div class="container">
  <div id="stats">
    <h3>Stats</h3>
    <p>Wins: <%=playerStats.wins%></p>
    <p>Losses: <%=playerStats.losses%></p>
    <p>Money: <%=playerStats.money%></p>
  </div>
  <form action="/newGame" method="POST">
    <button type="submit" name="newGame" class="btn btn-primary">
      New Game
    </button>
  </form>
  <table class="table">
    <thead>
      <tr>
        <th scope="col">#</th>
        <th scope="col">Game ID</th>
        <th scope="col">Opponent</th>
        <th scope="col"></th>
      </tr>
    </thead>
    <tbody>
      <% for (let i =0; i < gameIdArray.length; i += 1) {%>
      <tr>
        <th scope="row">1</th>
        <td><%=gameIdArray[i]%></td>
        <td><%=opponentArray[i]%></td>
        <td>
          <a href="/game/<%=gameIdArray[i]%>"
            ><button class="btn btn-primary">Enter</button></a
          >
        </td>
      </tr>
      <%}%>
    </tbody>
  </table>
</div>
<%-include('partials/footer')%>
